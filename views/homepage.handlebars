
{{#each projects as |project| }}
<div class=" bands columns-2 md:columns-3 top-5 border-dashed border-2 border-indigo-600 p-2 w-1/2 flex flex-col ">
  <img class="inline-block h-12 w-12 rounded-full ring-2 ring-black mr-5 mt-5" src="{{artist_img}}" alt="{{name}}"/>
  <div class="content-center">
    <h2>
      {{random_emoji}}
      <a class="font-semibold hover:text-slate-900 visited:text-purple-600 " href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p class= "italic">
      {{project.artist_bio}}
    </p>
    <p class ="text-sm">Created by {{project.user.name}} on {{format_date project.date_created}} </p>
  </div>
</div>
{{/each}}
